<h1>Upload a New File</h1>

<%= form_with model: @file_upload, local: true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :file %>
    <%= f.file_field :file %>
  </div>

  <div>
    <%= f.submit "Upload" %>
  </div>
<% end %>

<%= link_to "Back", file_uploads_path %>
